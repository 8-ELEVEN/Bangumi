{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "strict": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "@_": ["src/screens/_"],
      "@_/*": ["src/screens/_/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@tinygrail": ["src/screens/tinygrail"],
      "@tinygrail/*": ["src/screens/tinygrail/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@": ["./"],
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist", "android", "src/assets", "web"],
  "extends": "expo/tsconfig.base"
}
